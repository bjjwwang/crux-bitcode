# Description: A version control system (CVS replacement); barely modified contrib/subversion.
# URL:         http://subversion.apache.org
# Maintainer:  crux-bitcode
# Depends on:  boost cyrus-sasl gnupg lz4 serf utf8proc

name=subversion
version=1.14.0
release=1
source=(https://archive.apache.org/dist/$name/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-nls \
		--enable-all-static \
		--disable-mod-activation \
		--without-apxs \
		--without-swig

	make
	make -j1 DESTDIR=$PKG install

	# info pages seem to get generated when makeinfo is available
	rm -rf $PKG/usr/info
}
