# Description: Text editor
# URL:         https://gnu.org/software/emacs
# Maintainer:  crux-bitcode
# Depends on:

name=emacs
version=27.2
release=1
source=(https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
    cd $name-$version

    ./configure
    make
    mkdir -p $PKG/usr/bin
    cp src/emacs $PKG/usr/bin/emacs
}
